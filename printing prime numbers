#include<stdio.h>
int main(){
    int a,i,r=0;
    printf("enter the number:");
    scanf("%d",&a);
    if(a==2)
    printf("%d is a prime number",a);
    else{
    for(i=2;i<=(a+1)/2;i++){
        if(a%i==0){
            r=0;
            break;
        }
        else{
            r=1;
        }
    }
    if(r==0){
        printf("%d is not a prime number",a);
    }
    else{printf("%d is prime number",a);}
    }
    return 0;
}
